<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".mathGame.playMathGame">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:id="@+id/multiplicant1"
        android:layout_marginTop="55dp"
        android:textSize="62dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/leveltextView"
        android:layout_alignLeft="@+id/option1"
        android:layout_alignStart="@+id/option1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/textView3"
        android:textSize="72dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignTop="@+id/multiplicant1"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:id="@+id/multiplicant2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="62dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/textView5"
        android:textSize="72dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:id="@+id/option1"
        android:textSize="42dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/option2"
        android:textSize="42dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignTop="@+id/option1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="81"
        android:id="@+id/option3"
        android:textSize="42dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignTop="@+id/option2"
        android:layout_alignRight="@+id/multiplicant2"
        android:layout_alignEnd="@+id/multiplicant2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LEVEL : 1"
        android:id="@+id/leveltextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/option2"
        android:layout_alignStart="@+id/option2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SCORE : 0"
        android:id="@+id/scoreTextView"
        android:layout_above="@+id/multiplicant2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
