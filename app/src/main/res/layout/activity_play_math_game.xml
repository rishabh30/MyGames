<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0099cc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".mathGame.playMathGame">


    <TextView
        android:id="@+id/multiplicant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="9"
        android:textSize="72dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_above="@+id/option1"
        android:layout_alignRight="@+id/option1"
        android:layout_alignEnd="@+id/option1"
        android:layout_marginBottom="78dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/multiplicant1"
        android:layout_alignBottom="@+id/multiplicant1"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:fontFamily="casual"
        android:text="*"
        android:textSize="72dp" />

    <TextView
        android:id="@+id/multiplicant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/multiplicant1"
        android:layout_alignBottom="@+id/multiplicant1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="casual"
        android:text="9"
        android:textSize="72dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:fontFamily="casual"
        android:textSize="72dp"
        android:layout_above="@+id/option2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/option1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="52dp"
        android:fontFamily="casual"
        android:layout_alignBottom="@+id/option2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="4dp"
        android:background="@drawable/roundedbutton"
        android:text="34"
        />

    <Button
        android:id="@+id/option2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:fontFamily="casual"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="4dp"
        android:background="@drawable/roundedbutton"
        android:text="45"
        android:textSize="52dp" />

    <Button
        android:id="@+id/option3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/option2"
        android:layout_alignBottom="@+id/option2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="casual"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="4dp"
        android:background="@drawable/roundedbutton"
        android:text="81"
        android:textSize="52dp" />

    <TextView
        android:id="@+id/leveltextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="LEVEL : 1"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/option3"
        android:layout_toStartOf="@+id/option3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="23dp"

        android:fontFamily="casual"

        android:text="SCORE : 0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36dp"
        android:layout_below="@+id/leveltextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />


</RelativeLayout>
