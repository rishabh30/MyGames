<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".memoryGame.playMemoryGame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LEVEL : 1"
        android:id="@+id/leveltextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SCORE : 0"
        android:id="@+id/scoreTextView"
        android:layout_below="@+id/leveltextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRESS START"
        android:id="@+id/instruction"
        android:layout_below="@+id/scoreTextView"
        android:textSize="15dp"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/option1"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/instruction"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/option2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/option1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/option3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/option2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/option4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/option3"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/restart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startSequence" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Sequence"
        android:id="@+id/button"
        android:layout_below="@+id/instruction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playSequence"/>

</RelativeLayout>
